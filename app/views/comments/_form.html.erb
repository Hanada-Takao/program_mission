<%= form_with(model: [blog, comment], class: 'js-form', url: blog_comments_path(@blog) ) do |f| %>
  <div class="p-comment__formBox">
    <div class="form-group">
      <%= f.label :comment_name, 'タイトル' %>
      <%= f.text_field :comment_name, placeholder: "コメントのタイトルを記入してください", class: "form-control" %>
    </div>
    <div class="form-group">
      <%= f.label :comment, 'コメント' %>
      <%= f.text_area :comment, placeholder: "コメントを記入してください", class: "form-control", rows: 4 %>
    </div>

          <div class = "submit_button">
            <%= f.button :type => "submit", style: 'background: none;' 'border-style: none;' do %>
              <i class="fa-regular fa-paper-plane fa-lg">コメントを送る</i>
            <% end %>
          </div>
  </div>
<% end %>