<%= render 'shared/error_messages' %>

<%= form_with model: @mission, local: true  do |f| %>
<div class="container mt-5">
  <div class="row">
    <div class="col-8 mx-auto">
      <div class="form-group">
        <%= f.label :input_main, 'メソッド名' %><br />
        <%= f.text_field :input_main, autofocus: true, autocomplete: "input_main",placeholder: "記入してください ※必須事項・ペースト不可",
                          oncopy: "return false", onpaste:"return false", class: 'form-control' %>
      </div>

      <div class="form-group">
        <%= f.label :input_reading, '読み方' %>
        <%= f.text_field :input_reading, autofocus: true, autocomplete: "input_reading", placeholder: "読み方を記入してください ※ペースト不可",
                          oncopy: "return false", onpaste:"return false", class: 'form-control' %>
      </div>

      <div class="form-group">
        <%= f.label :input_library, '組み込みライブラリ' %>
        <%= f.text_field :input_library, autofocus: true, autocomplete: "input_library", placeholder: "ライブラリを記入してください", class: 'form-control' %>
      </div>

      <div class="form-group">
        <%= f.label :input_alias, 'エイリアス' %>
        <%= f.text_field :input_alias, autofocus: true, autocomplete: "input_alias", placeholder: "同義語を記入してください ※ペースト不可",
                          oncopy: "return false", onpaste:"return false", class: 'form-control' %>
      </div>

      <div class="form-group">
        <%= f.label :input_related, '関連語' %>
        <%= f.text_field :input_related, autofocus: true, autocomplete: "input_related", placeholder: "関連語を記入してください ※ペースト不可",
                          oncopy: "return false", onpaste:"return false", class: 'form-control' %>
      </div>

      <div class="form-group">
        <%= f.label :input_sample, 'サンプル' %>
        <%= f.text_field :input_sample, autofocus: true, autocomplete: "input_sample", placeholder: "使用例を記入してください ※ペースト不可",
                          oncopy: "return false", onpaste:"return false", class: 'form-control' %>
      </div>

      <div class="form-group">
        <%= f.label :input_description, '説明文' %>
        <%= f.text_field :input_description, autofocus: true, autocomplete: "input_description", placeholder: "説明文を記入してください ※ペースト不可",
                          oncopy: "return false", onpaste:"return false", class: 'form-control' %>
      </div>

      <div class="form-group">
        <%= f.label :input_reference_site, 'リファレンスサイト' %>
        <%= f.text_field :input_reference_site, autofocus: true, autocomplete: "input_reference_site", placeholder: "リファレンスサイトのURLを記入してください", class: 'form-control' %>
      </div>

      <div class="form-group">
        <%= f.label :input_remarks, 'その他' %>
        <%= f.text_area :input_remarks, autofocus: true, autocomplete: "input_remarks", placeholder: "備考を記入してください", class: 'form-control', rows: 5 %>
      </div>

      <div class="form-group">
        <span>タグ</span>
        <%= f.collection_check_boxes(:tag_ids, Tag.all, :id, :tag_name) do |tag| %>
          <div class="form-check">
            <%= tag.label class: 'form-check-label' do %>
              <%= tag.check_box class: 'form-check-input' %>
              <%= tag.text %>
            <% end %>
          </div>
        <% end %>
      </div>

      <div class="submit-block">
        <%= f.submit '保存', class: 'btn btn-primary' %>
      </div>
    </div>
  </div>
</div>
<% end %>