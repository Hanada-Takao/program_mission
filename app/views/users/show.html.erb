<section class="py-5 text-center container">
  <div class="card" style="max-widh: 25rem;" >
    <div class="card-img-top">
      <% if @user.image.attached? %>
        <div class="user-image">
          <%= image_tag @user.image %>
        </div>
      <% else %>
        <svg width="80" height="80" class="svg-icon" viewBox="0 0 20 20">
          <path d="M12.075,10.812c1.358-0.853,2.242-2.507,2.242-4.037c0-2.181-1.795-4.618-4.198-4.618S5.921,4.594,5.921,6.775c0,1.53,0.884,3.185,2.242,4.037c-3.222,0.865-5.6,3.807-5.6,7.298c0,0.23,0.189,0.42,0.42,0.42h14.273c0.23,0,0.42-0.189,0.42-0.42C17.676,14.619,15.297,11.677,12.075,10.812 M6.761,6.775c0-2.162,1.773-3.778,3.358-3.778s3.359,1.616,3.359,3.778c0,2.162-1.774,3.778-3.359,3.778S6.761,8.937,6.761,6.775 M3.415,17.69c0.218-3.51,3.142-6.297,6.704-6.297c3.562,0,6.486,2.787,6.705,6.297H3.415z"></path>
        </svg>
      <% end %>
    </div>
      <h1 class="fw-light"><%= @user.user_name %></h1>
      <p class="text-small"><%= link_to @user.followings.count, followings_user_path(@user) %> フォロー <%= link_to @user.followers.count, followers_user_path(@user) %> フォロワー</p>
      <% if @user == current_user %>
        <p class="lead text-muted">You're currently signed in as <%= current_user.email %></p>
      <% else %>
        <% if @user.is_followed_by?(current_user) %>
          <%=button_to 'フォロー解除', user_relationships_path(@user) , class: "btn btn-sm btn-danger",   method: :delete %>
        <% else %>
          <%=button_to 'フォロー', user_relationships_path(@user) , class: "btn btn-sm btn-info",   method: :post %>
        <% end %>
      <% end %>
    </div>
  </div>
</section>
<div class="col-9 mx-auto mt-5">
  <table class="table table-hover">
    <thead class="thead-dark">
      <tr>
        <th scope="col">ブログタイトル</th>
        <th scope="col">ブログコンテンツ</th>
        <th scope="col">いいね！数</th>
        <th scope="col">コメント数</th>
      </tr>
    </thead>
    <tbody>
      <% @user.blogs.each do |blog| %>
        <tr>
          <td><%= link_to blog.title, blog_path(blog) %></td>
          <td><%= blog.content %></td>
          <td><%= "#{blog.favorites.count}" %><i class="fas fa-heart"></i></td>
          <td><%= "#{blog.comments.count}" %><i class="fa-solid fa-comment"></i></td>
        </tr>
      <% end %>
    </tbody>
  </table>
  <%= paginate @blogs %>
</div>
<%= link_to "ユーザー編集", edit_user_path %>