<div class="container marketing">
  <div class="row d-flex justify-content-center">
    <div class="col-10 mt-5">
      <table class="table text-center">
        <thead>
          <tr>
            <th>ユーザーネーム</th>
            <th>メッセージルーム</th>
            <th>フォロー & アンフォロー</th>
          </tr>
        </thead>
        <tbody>
          <% @users.each do |user| %>
            <tr>
              <td>
                <%= link_to user_path(user) do %>
                  <%= user.user_name %>
                <% end %>
              </td>
              <td>
                <%= button_to 'メッセージ', conversations_path(sender_id: current_user.id, recipient_id: user.id), method: :post %>

              </td>
              <td>
                <% if user != current_user %>
                  <% if user.is_followed_by?(current_user) %>
                    <%=button_to 'フォロー解除', user_relationships_path(user) , class: "btn btn-sm btn-danger",   method: :delete %>
                  <% else %>
                    <%=button_to 'フォロー', user_relationships_path(user) , class: "btn btn-sm btn-info",   method: :post %>
                  <% end %>
                <% end %>
              </td>
            </tr>
          <% end %>
        </tbody>
      </table>
    </div>
  </div>
</div>
<%= paginate @users %>