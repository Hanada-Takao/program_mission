<div class="container marketing">
  <div class="row d-flex justify-content-center">
    <div class="col-10 mt-5">

        <h3>ユーザー 一覧</h3>
            <div class="container">
              <div class="container-item">
                <th>ユーザー<br>icon</th>
              </div>
              <div class="container-item">
                <th>ユーザー<br>ネーム</th>
              </div>
              <div class="container-item">
                <th>メッセージ<br>ルーム</th>
              </div>
              <div class="container-item">
                <th>フォロー & <br>アンフォロー</th>
              </div>
            </div>
            <hr>
          <% @users.each do |user| %>

            <div class="container">
              <div class="container-item">
              <% if user.image.attached? %>
                <div class="container-item-img">
                  <%= image_tag user.image %>
                </div>
              </div>
              <% else %>
                <div class="container-item">
                  <div class="user-image">
                    <svg width="80" height="80" class="svg-icon" viewBox="0 0 20 20">
                      <path d="M12.075,10.812c1.358-0.853,2.242-2.507,2.242-4.037c0-2.181-1.795-4.618-4.198-4.618S5.921,4.594,5.921,6.775c0,1.53,0.884,3.185,2.242,4.037c-3.222,0.865-5.6,3.807-5.6,7.298c0,0.23,0.189,0.42,0.42,0.42h14.273c0.23,0,0.42-0.189,0.42-0.42C17.676,14.619,15.297,11.677,12.075,10.812 M6.761,6.775c0-2.162,1.773-3.778,3.358-3.778s3.359,1.616,3.359,3.778c0,2.162-1.774,3.778-3.359,3.778S6.761,8.937,6.761,6.775 M3.415,17.69c0.218-3.51,3.142-6.297,6.704-6.297c3.562,0,6.486,2.787,6.705,6.297H3.415z"></path>
                    </svg>
                  </div>
                </div>
              <% end %>
              <div class="container-item">
                <div class="user-name">
                  <%= link_to user_path(user) do %>
                    <%= user.user_name %>
                  <% end %>
                </div>
              </div>
              <div class="container-item">
                <div class="user-message">
                  <div class = "submit_button">
                    <%= button_to conversations_path(sender_id: current_user.id, recipient_id: user.id),
                                                    style: 'background: none;' 'border-style: none;', method: :post do %>
                      <i class="fa-regular fa-comments"></i>
                    <% end %>
                  </div>
                </div>
              </div>
              <div class="container-item">
                <%= render 'follow_form', user: user %>
              </div>
            </div>
            <hr>
          <% end %>

    </div>
  </div>
</div>
<%= paginate @users %>