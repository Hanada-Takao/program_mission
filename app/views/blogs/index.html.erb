<div class="container mt-5">
  <div class="row">
    <div class="col-10 mx-auto">
      <table class="table table-hover">
        <thead class="thead-dark">
          <tr>
            <th scope="col">ブログ</th>
            <th scope="col">投稿者</th>
            <th scope="col"></th>
          </tr>
        </thead>
        <tbody>
          <% @blogs.each do |blog| %>
            <tr>
              <td><%= link_to blog.title, blog_path(blog) %></td>
              <td><%= blog.user.user_name %></td>
              <td>
                <% if current_user.already_favorited?(blog) %>
                  <%= link_to blog_favorites_path(blog), method: :delete do %>
                    <i class="fas fa-heart"></i>
                  <% end %>
                  <%= blog.favorites.count %>
                <% else %>
                  <%= link_to blog_favorites_path(blog), method: :post do %>
                    <i class="far fa-heart"></i>
                  <% end %>
                  <%= blog.favorites.count %>
                <% end %>
              </td>
            </tr>
          <% end %>
        </tbody>
      </table>
    </div>
  </div>
</div>

<%= paginate @blogs %>