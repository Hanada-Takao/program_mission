<div class="d-flex align-items-center">
  <h1>ブログ一覧</h1>
  <div class="ml-auto boards__linkBox">
    <a href="/blogs/new" class="btn btn-outline-dark">新規作成</a>
  </div>
</div>
<table class="table table-hover boards__table">
  <thead class="thead-dark">
    <tr>
      <th>ID</th>
      <th>タイトル</th>
      <th>作成者</th>
      <th>作成日時</th>
      <th>更新日時</th>
    </tr>
  </thead>
  <tbody>
    <% @blogs.each do |blog| %>
      <tr>
        <th><%= blog.id %></th>
        <td><%= blog.title %></td>
        <td><%= blog.content %></td>
        <td><%= blog.created_at.to_s(:datetime_jp) %></td>
        <td><%= blog.updated_at.to_s(:datetime_jp) %></td>
      </tr>
    <% end %>
  </tbody>
</table>