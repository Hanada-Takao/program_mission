<%= render 'shared/error_messages' %>
<div class="container mt-5">
  <div class="row">
    <div class="col-12 mx-auto">
<%= form_with model: @blog, local: true  do |f| %>
  <div class="form-group">
    <%= f.label :title, ' タイトル' %><br />
    <%= f.text_field :title, autofocus: true, autocomplete: "title", placeholder: "ブログのタイトルを記入してください", class: 'form-control' %>
  </div>
  <div class="form-group">
    <%= f.label :content, ' 本文' %>
    <%= f.text_area :content, autofocus: true, autocomplete: "content", placeholder: "ブログの本文を記入してください", class: 'form-control', rows: 10 %>
  </div>
  <div class="form-group">
    <%= f.label :images, ' 画像投稿' %>
    <%= f.file_field :images, multiple: true %><br>
  </div>
  <div class="submit-block">
    <%= f.submit '保存', class: 'button' %>
  </div>
<% end %>
  </div>  </div>  </div>