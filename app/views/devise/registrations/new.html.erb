<div class="container mt-5">
  <div class="row">
    <div class="col-8 mx-auto">
      <h2 class="text-center">新規登録</h2>
      <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
      <%= render "devise/shared/error_messages", resource: resource %>

        <div class="form-group">
          <%= f.label :user_name, "ユーザーネーム" %><br />
          <%= f.text_field :user_name, autofocus: true, autocomplete: "user_name", placeholder: "名前を記入してください", class: "form-control" %>
        </div>

        <div class="form-group">
          <%= f.label :email %><br />
          <%= f.email_field :email, autofocus: true, autocomplete: "email", placeholder: "emailを記入してください", class: "form-control" %>
        </div>

        <div class="form-group">
          <%= f.label :password %>
          <% if @minimum_password_length %>
          <em>(<%= @minimum_password_length %> 文字以上記入してください)</em>
          <% end %><br />
          <%= f.password_field :password, autocomplete: "new-password", placeholder: "passwordを記入してください", class: "form-control" %>
        </div>

        <div class="form-group">
          <%= f.label :password_confirmation %><br />
          <%= f.password_field :password_confirmation, autocomplete: "new-password", placeholder: "確認用passwordを記入してください", class: "form-control" %>
        </div>

        <div>
          <%= f.submit "新規登録", class: "btn btn-primary" %>
        </div>
      <% end %>
      <%= render "devise/shared/links" %>
    </div>
  </div>
</div>
