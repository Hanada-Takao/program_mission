<% if user_signed_in? %>
  <% if current_user.already_favorited?(blog) %>
    <%= link_to blog_favorites_path(blog), method: :delete, remote: true do %>
      <i class="fa fa-heart" aria-hidden="true" style="color: red;">
        <%= blog.favorites.count %>
      </i>
    <% end %>
  <% else %>
    <%= link_to blog_favorites_path(blog), method: :post, remote: true do %>
      <i class="fa fa-heart" aria-hidden="true" style="color: #C0C0C0;">
        <%= blog.favorites.count %>
      </i>
    <% end %>
  <% end %>
<% else %>
  <i class="fa fa-heart" aria-hidden="true">
    <%= blog.favorites.count %>
  </i>
<% end %>